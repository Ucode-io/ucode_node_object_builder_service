[
    {
        "$lookup": {
            "from": "clients",
            "localField": "clients_id",
            "foreignField": "guid",
            "as": "clients_id_data"
        }
    },
    {
        "$lookup": {
            "from": "branches",
            "localField": "branch_id",
            "foreignField": "guid",
            "as": "branch_id_data"
        }
    },
    {
        "$lookup": {
            "from": "couriers",
            "localField": "courier_id",
            "foreignField": "guid",
            "as": "courier_id_data"
        }
    },
    {
        "$group": {
            "_id": {
                "epic": "$epic",
                "task": "$task",
                "subtask": "$subtask"
            },
            "data": {
                "$push": {
                    "clients_id": "$clients_id",
                    "branch_id": "$branch_id",
                    "courier_id": "$courier_id",
                    "location": "$location",
                    "date": "$date",
                    "id_order": "$id_order",
                    "date_to": "$date_to",
                    "mail": "$mail",
                    "stage": "$stage",
                    "total_price": "$total_price",
                    "clients_id_data": {
                        "$arrayElemAt": [
                            "$clients_id_data",
                            0
                        ]
                    },
                    "branch_id_data": {
                        "$arrayElemAt": [
                            "$branch_id_data",
                            0
                        ]
                    },
                    "courier_id_data": {
                        "$arrayElemAt": [
                            "$courier_id_data",
                            0
                        ]
                    }
                }
            }
        }
    },
    {
        "$lookup": {
            "from": "clients",
            "localField": "clients_id",
            "foreignField": "guid",
            "as": "clients_id_data"
        }
    },
    {
        "$lookup": {
            "from": "branches",
            "localField": "branch_id",
            "foreignField": "guid",
            "as": "branch_id_data"
        }
    },
    {
        "$lookup": {
            "from": "couriers",
            "localField": "courier_id",
            "foreignField": "guid",
            "as": "courier_id_data"
        }
    },
    {
        "$group": {
            "_id": {
                "epic": "$_id.epic",
                "task": "$_id.task"
            },
            "data": {
                "$push": {
                    "subtask": "$_id.subtask",
                    "total_price": "$total_price",
                    "data": "$data"
                }
            }
        }
    },
    {
        "$lookup": {
            "from": "clients",
            "localField": "clients_id",
            "foreignField": "guid",
            "as": "clients_id_data"
        }
    },
    {
        "$lookup": {
            "from": "branches",
            "localField": "branch_id",
            "foreignField": "guid",
            "as": "branch_id_data"
        }
    },
    {
        "$lookup": {
            "from": "couriers",
            "localField": "courier_id",
            "foreignField": "guid",
            "as": "courier_id_data"
        }
    },
    {
        "$group": {
            "_id": "$_id.epic",
            "data": {
                "$push": {
                    "task": "$_id.task",
                    "total_price": "$total_price",
                    "data": "$data"
                }
            }
        }
    },
    {
        "$addFields": {
            "epic": "$_id"
        }
    }
]